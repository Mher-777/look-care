						a(href="#").header__menu-link Услуги
						+icon('arrow-down', 'header__menu-icon header__menu-icon--color-gray')
						ul.header__dropdown
							li.header__dropdown-item
								a(href="#").header__dropdown-link Лазерная эпиляция 1
							li.header__dropdown-item
