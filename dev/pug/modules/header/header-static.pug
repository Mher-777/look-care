						a(href="#").header__menu-link Новости
			.header__phones
				.header__phone
					+icon('phone', 'header__phone-icon header__phone-icon--color-gray')
					a(href="tel:+37441303011") 041303011
				.header__phone
					+icon('phone', 'header__phone-icon header__phone-icon--color-gray')
					a(href="tel:+37404303029") 094303029
			.language
				.language__current
					img(src="static/images/content/flags/flag-am.svg" alt="Армянскый Флаг").language__current-flag
					+icon('arrow-down', 'language__icon language__icon--color-gray')
				ul.language__dropdown
					li.language__dropdown-item
						a(href="#").language__dropdown-link
							img(src="static/images/content/flags/flag-us.svg").language__dropdown-flag
					li.language__dropdown-item
						a(href="#").language__dropdown-link
							img(src="static/images/content/flags/flag-ru.svg").language__dropdown-flag
					li.language__dropdown-item
						a(href="#").language__dropdown-link
							img(src="static/images/content/flags/flag-fr.svg").language__dropdown-flag
