				block content
			include ../modules/footer/footer
			include ../modules/popups/popup-call
		script(src="static/js/libs.js")
		script(src="https://unpkg.com/simplebar@latest/dist/simplebar.min.js")
		script(src="static/js/main.js")
		block script
